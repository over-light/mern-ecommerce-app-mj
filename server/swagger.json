  "definitions": {
    "UserSignup": {
      "required": ["name", "email", "password", "mobile"],
      "properties": {
        "name": {
          "type": "string",
          "required": true
        },
        "email": {
          "type": "string",
          "required": true
        },
        "password": {
          "type": "string",
          "required": true
        },
        "mobile": {
          "type": "string",
          "required": true
        }
      }
    },
    "UserLogin": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "required": true
        },
        "password": {
          "type": "string",
          "required": true
        }
      }
    },
    "Product": {
      "required": ["name", "description", "image", "price"],
      "properties": {
        "name": {
          "type": "string",
          "required": true
        },
        "description": {
          "type": "string",
          "required": true
        },
        "image": {
          "type": "string",
          "required": true,
          "format": "binary"
        },
        "price": {
          "type": "string",
          "required": true
        }
      }
    },
    "Category": {
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "required": true
        },
        "description": {
          "type": "string",
          "required": true
        }
      }
    }
